<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    tools:context=".dialog.LFirstDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtLFirstBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_back_dark"
            android:drawablePadding="5dp"
            android:fontFamily="@font/seguisb"
            android:text="@string/add_property"
            android:textColor="#212121"
            android:textSize="20sp"
            app:drawableTint="@color/colorAccent" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgLFirst"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/house"
            android:backgroundTint="@color/spinner_light"
            app:riv_corner_radius="20dp" />

        <EditText
            android:id="@+id/etLFirstFlat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="30dp"
            android:drawableLeft="@drawable/ic_home_black_24dp"
            android:drawablePadding="10dp"
            android:drawableTint="@color/colorAccent"
            android:ems="10"
            android:fontFamily="@font/seguisb"
            android:hint="Enter Building Name and Flat No."
            android:inputType="textPersonName"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#707070"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtLFirstLoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorAccent"
                android:ems="10"
                android:fontFamily="@font/seguisb"
                android:inputType="textMultiLine"
                android:text="Select Location"
                android:textColor="#707070"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:background="#707070" />
        </LinearLayout>

        <EditText
            android:id="@+id/etLFirstRent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="30dp"
            android:drawableLeft="@drawable/inr"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/seguisb"
            android:hint="Enter Rent per month"
            android:inputType="number"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#707070"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtLFirstSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_acc_fill"
            android:fontFamily="@font/seguisb"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:text="Save"
            android:textColor="#ffffff"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>